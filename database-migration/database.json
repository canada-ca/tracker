    },
    {
      "type": "delimiteranalyzer",
      "name": "space-delimiter-analyzer",
      "delimiter": " "
    },
    {
      "type": "searchview",
      "name": "domainSearch",
      "options": {
        "links": {
          "domains": {
            "fields": {
              "domain": { "analyzers": ["space-delimiter-analyzer"] }
            }
          }
        }
      }
    },
    {
      "type": "searchview",
      "name": "organizationSearch",
      "options": {
        "links": {
          "organizations": {
            "fields": {
              "orgDetails": {
                "fields": {
                  "en": {
                    "fields": {
                      "acronym": { "analyzers": ["text_en"] },
                      "name": { "analyzers": ["text_en"] }
                    }
                  },
                  "fr": {
                    "fields": {
                      "acronym": { "analyzers": ["text_fr"] },
                      "name": { "analyzers": ["text_fr"] }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "type": "searchview",
      "name": "userSearch",
      "options": {
        "links": {
          "users": {
            "fields": {
              "displayName": { "analyzers": ["text_en"] },
              "userName": { "analyzers": ["text_en"] }
            }
          }
        }
      }
    },
    {
      "type": "searchview",
      "name": "auditLogSearch",
      "options": {
        "links": {
          "auditLogs": {
            "fields": {
              "initiatedBy": {
                "fields": {
                  "userName": { "analyzers": ["text_en"] }
                }
              },
              "target": {
                "fields": {
                  "resource": { "analyzers": ["text_en"] }
                }
              }
            }
          }
        }
      }
    }
  ]
